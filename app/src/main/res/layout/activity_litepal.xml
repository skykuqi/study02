<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sky.sqlite.LitepalActivity"
    android:orientation="vertical"
    android:paddingTop="15dp">
    <Button
        android:id="@+id/litepal_button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="创建数据表"
        android:textAllCaps="false"
        android:textSize="25sp" />
    <Button
        android:id="@+id/litepal_button_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector"
        android:text="添加数据"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/litepal_button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector"
        android:text="修改数据"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/litepal_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector"
        android:text="删除数据"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/litepal_button_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector"
        android:text="查询数据"
        android:textAllCaps="false"
        android:textSize="25sp" />
</LinearLayout>
